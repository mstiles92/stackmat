{
  "name": "stackmat",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:ts && npm run build:umd",
    "build:ts": "tsc",
    "build:umd": "rollup dist/index.js --format umd --name Stackmat --file dist/index.mjs",
    "lint": "tslint -p tsconfig.json",
    "watch": "concurrently npm:watch:ts npm:watch:umd",
    "watch:ts": "tsc --watch",
    "watch:umd": "wait-on dist/index.js && rollup dist/index.js --format umd --name Stackmat --file dist/index.mjs --watch"
  },
  "author": "Matthew Stiles",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "rollup": "^1.15.6",
    "tslint": "^5.17.0",
    "typescript": "^3.5.2",
    "wait-on": "^3.2.0"
  }
}
